{{!
    @template local_easycustmenu/menu/menu_setting_collection

    Example context (json):
    {
        "values"={
        }
    }

}}

<div class="menu-setting-content" id="menu_setting_collection">
    <form action="{{menu_setting_form_action}}" method="post">
        <div class="menu-wrapper">
            <div class="menu" total-menu="">
            {{#values}}
                {{> local_easycustmenu/menu/menu_item_wrapper }}
            {{/values}}
            </div>
            <div class="action-add-menu">
                <button type="button" class="btn btn-primary btn-add-menu"> Add Menu</button>
            </div>
        </div>
        <div class="form-input-hidden">
            <input type="hidden" id="primary_menu_sesskey" name="sesskey" value="">
            <script>
                document.getElementById("primary_menu_sesskey").value = M.cfg.sesskey;
            </script>
        </div>

        <button type="submit" class="btn btn-primary mb-2">Save Menu</button>
    </form>
</div>
